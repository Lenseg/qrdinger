doctype html
html
  head
    base(href='/')
    title Qrdinger
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    style(type='text/css').
      .main-loader{
        position: fixed;
        top: 50%;
        left: 50%;
        background: #26547C;
        padding: 10px;
        transform: translate(-50%,-50%);
        width: 60px;
        height: 60px;
        border-radius: 10px;
      }
  body
    ui-view
