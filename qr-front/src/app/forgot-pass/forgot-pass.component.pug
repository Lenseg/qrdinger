div.container
  div.col-lg-4.col-lg-offset-4.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2  
    h3 Send password reset email
    hr
    form((ngSubmit)="resetPass()",[ngClass]="{'has-error':errorMessage && errorMessage.type==='error', 'has-success': errorMessage && errorMessage.type==='success'}", [formGroup]="form", novalidate)
      div.form-group
        label( for="email" ) Address
        input.form-control(type="email", name="email", formControlName="email", placeholder="main@gqrdinder.com")
      button.btn.btn-primary( [disabled]="!form.valid") Send
        app-callback.pull-right( [hidden]="!loading")
      span.help-block(*ngIf="errorMessage") {{errorMessage.message}}
